<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cfit010.contact_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.cfit010.contact_app.AddContactActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.cfit010.contact_app.FormActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.cfit010.contact_app.GetRequestActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.cfit010.contact_app.FieldValueActivity"
            android:label="@string/app_name" >
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>
